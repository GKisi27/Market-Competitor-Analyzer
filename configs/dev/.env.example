# Development Environment Configuration
# Branch: dev

# ======================
# Application
# ======================
APP_NAME=market-competitor-analyzer
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=dev-secret-key-change-in-production

# ======================
# Backend API
# ======================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# ======================
# Database (uncomment based on choice)
# ======================
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://dev_user:dev_password@localhost:5432/mca_dev

# MongoDB
# MONGODB_URI=mongodb://dev_user:dev_password@localhost:27017/mca_dev

# ======================
# Redis
# ======================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ======================
# Authentication
# ======================
JWT_SECRET_KEY=dev-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# Frontend
# ======================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_ENV=development

# ======================
# Crawler
# ======================
CRAWLER_DELAY_MIN=1.5
CRAWLER_DELAY_MAX=3.5
CRAWLER_HEADLESS=false
# PROXY_URL=

# ======================
# CORS (development - permissive)
# ======================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
